{
  "private": true,
  "name": "availity-workflow",
  "engines": {
    "yarn": "^3.0.0",
    "node": "^12.0.0 || ^14.0.0"
  },
  "workspaces": [
    "packages/*",
    "docusaurus",
    "example"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "conventional-changelog-cli": "^2.0.27",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "conventional-github-releaser": "^3.1.3",
    "conventional-recommended-bump": "^6.0.4",
    "dependency-check": "^4.1.0",
    "eslint-config-availity": "^7.0.251",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "monodeploy": "^2.8.13",
    "prettier": "^2.1.2"
  },
  "scripts": {
    "build:app": "yarn workspace @availity/example build",
    "start:app": "yarn workspace @availity/example start",
    "test:app": "yarn workspace @availity/example test",
    "build:docs": "yarn workspace @availity/dinosaurdocs build",
    "start": "yarn workspace @availity/dinosaurdocs start --no-open",
    "start:docs": "yarn workspace @availity/dinosaurdocs start",
    "lint": "node ./node_modules/.bin/eslint .",
    "test": "jest --silent",
    "test:integration": "yarn workspaces foreach -i -v run integration --verbose",
    "format": "prettier --write 'packages/*/*.(js|ts|tsx|jsx)' 'packages/*/!(node_modules|dist)/**/*.(js|ts|jsx|tsx)'",
    "release:ci": "yarn monodeploy --config-file monodeploy.config.js",
    "nuke": "yarn remove-locks && yarn clean",
    "check:packages": "sh ./scripts/artifactory-check.sh",
    "check:dependencies": "node scripts/check-missing-deps.js",
    "remove-locks": "find . -type f -name 'yarn.lock' -delete"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        85
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!@availity).+\\.(js|jsx|ts|tsx)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/docusaurus/"
    ],
    "testRegex": ".*.spec.js$"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn check:dependencies && yarn check:packages"
    }
  },
  "packageManager": "yarn@3.1.0"
}
