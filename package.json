{
  "private": true,
  "version": "4.0.0-alpha.15",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/config-lerna-scopes": "^7.0.0",
    "babel-eslint": "^8.0.3",
    "conventional-changelog": "^2.0.1",
    "conventional-github-releaser": "^3.1.2",
    "conventional-recommended-bump": "^4.0.0",
    "copyfiles": "^2.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-availity": "^3.0.0-beta.10",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lerna": "^2.2.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.8.2"
  },
  "scripts": {
    "lint": "eslint .",
    "publish": "lerna publish --force-publish=*",
    "bootstrap": "lerna bootstrap",
    "link": "lerna link",
    "test": "jest --silent",
    "test:integration": "lerna run --concurrency 1 integration",
    "clean": "lerna clean",
    "postinstall": "lerna bootstrap",
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules|dist)/**/*.js'",
    "precommit": "lint-staged",
    "release": "npm run lint && npm run copy:templates && sh ./scripts/release.sh",
    "copy:templates": "npm run copy:react:templates && npm run copy:angular:templates",
    "copy:angular:templates": "copyfiles -a -u 2 -e \"**/node_modules/**/*\" \"packages/example-angular/**/*\" packages/workflow-plugin-angular/template/",
    "copy:react:templates": "copyfiles -a -u 2 -e \"**/node_modules/**/*\" \"packages/example-react/**/*\" packages/workflow-plugin-react/template/",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        85
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!@availity).+\\.(js|jsx)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/packages/workflow-plugin-angular/template/",
      "<rootDir>/packages/workflow-plugin-react/template/",
      "<rootDir>/packages/example-angular/"
    ],
    "testRegex": ".*.spec.js$"
  }
}
